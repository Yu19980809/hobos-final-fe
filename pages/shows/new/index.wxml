<!-- 创建演出 -->
<view class="container">
	<form bindsubmit="onPostShow">
		<!-- info -->
		<view class="py30">
			<view class="f32 bold mb40">
				演出信息
			</view>

			<view class="info px20 py40 bt bb f32 bold">
				<view class="clubName">
					<view class="left">
						<image src="/images/club.svg" mode="aspectFill"/>
						<text>俱乐部</text>
					</view>
					<view class="right">
						<input name="clubName" type="text" placeholder="贰叁叁俱乐部"/>
					</view>
				</view>

				<view class="showName">
					<view class="left">
						<image src="/images/showNew/mic.svg" mode="aspectFill"/>
						<text>演出名称</text>
					</view>
					<view class="right">
						<input name="showName" type="text" placeholder="新人训练赛"/>
					</view>
				</view>

				<view class="date">
					<view class="left">
						<image src="/images/showNew/calendar.svg" mode="aspectFill"/>
						<text>演出日期</text>
					</view>
					<view class="right">
						<picker mode="date" value="{{ date }}" start="{{ date }}" end="2025-12-01" bindchange="bindDateChange">
							<view class="picker">
								{{ date }}
							</view>
						</picker>
					</view>
				</view>

				<view class="startTime">
					<view class="left">
						<image src="/images/showNew/time.svg" mode="aspectFill"/>
						<text>开始时间</text>
					</view>
					<view class="right">
						<picker mode="time" value="{{ startTime }}" start="00:00" end="23:59" bindchange="bindStartTimeChange">
							<view class="picker">
								{{ startTime }}
							</view>
						</picker>
					</view>
				</view>

				<view class="endTime">
					<view class="left">
						<image src="/images/showNew/time.svg" mode="aspectFill"/>
						<text>结束时间</text>
					</view>
					<view class="right">
						<picker mode="time" value="{{ endTime }}" start="00:00" end="23:59" bindchange="bindEndTimeChange">
							<view class="picker">
								{{ endTime }}
							</view>
						</picker>
					</view>
				</view>

				<view class="address">
					<view class="left">
						<image src="/images/address.svg" mode="aspectFill"/>
						<text>演出地址</text>
					</view>
					<view class="right">
						<input name="address" type="text" placeholder="延平路425"/>
					</view>
				</view>

				<view class="description">
					<view class="left">
						<image src="/images/description.svg" mode="aspectFill"/>
						<text>演出简介</text>
					</view>
					<view class="right">
						<input name="description" type="text" placeholder="敬请期待"/>
					</view>
				</view>
			</view>
		</view>

		<!-- button -->
		<view class="button">
			<button form-type="submit" class="pa0 btn-black f32 mauto my40">创建演出</button>
		</view>
	</form>
	
</view>