/* pages/shows/management/index.wxss */

/* create btn */
.create {
    height: 100rpx;
    border-radius: 60rpx;
}

.create image {
    width: 58rpx;
    height: 58rpx;
}

/* card */
.upcoming .card {
	margin-bottom: 120rpx;
}

/* actions */
.actions {
	width: 580rpx;
	height: 100rpx;
	margin-top: 24rpx;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
}

/* expired part */
.expired .card {
    background-color: #D9D9D9;
}

.expired .title {
    height: 58rpx;
    line-height: 58rpx;
}

.expired .card .time {
    color: #848484;
}

.expired .card .name {
    color: #1F1F1F;
}

.expired .card .card-bottom {
    color: #848484;
}

.expired .card .card-top-right {
    position: relative;
}

.expired .card .card-top-right .mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
}