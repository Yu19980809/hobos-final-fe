/* pages/users/index/index.wxss */

.avatar {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 40rpx;
    width: 64vw;
    height: 38vh;
    padding: 50rpx 50rpx;
    color: white;
    background-color: black;
    border-radius: 40rpx;
}

.pic .image {
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
}

.followers {
    font-size: x-small;
    background-color: rgb(142,80,88);
    border: 2rpx solid white;
    padding: 6rpx 12rpx;
    margin: 16rpx;
    border-radius: 16rpx;
}

.left {
    display: flex;
    align-items: center;
}

.right {
    display: flex;
    position: absolute; right: 15vw;
}

.profile {
    margin-top: -36rpx;
}

.history, .follow, .manage, .delete {
    margin-top: 20rpx;
}

.help {
    padding-bottom: 200rpx;
}