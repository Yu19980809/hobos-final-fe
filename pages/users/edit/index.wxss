/* pages/users/edit/index.wxss */

/* avatar */
.avatar {
	width: 340rpx !important;
	height: 340rpx;
}

.edit {
	position: absolute;
	right:215rpx;
	top: 260rpx;
	width: 40rpx;
	height: 40rpx;
	background-color: #fff;
	z-index: 9;
	background-image: pink;
}

/* info */
.info > view {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	height: 100rpx;
	box-sizing: border-box;
	margin-bottom: 10rpx;
}

.info > view .left {
	display: flex;
	align-items: center;
	width: 50%;
}

.info > view .left text {
	margin-left: 20rpx;
	font-size: 31rpx;
	letter-spacing: 4rpx;
}

.info > view .right {
	width: 50%;
	text-align: center;
}

.info image {
	width: 60rpx;
	height: 60rpx;
}
