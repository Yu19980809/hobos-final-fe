.card {
    height: 340rpx;
    padding: 26rpx 40rpx;
    margin-bottom: 40rpx;
    border-radius: 20rpx;
    background-color: #000;
    color: #fff;
    box-sizing: border-box;
    box-shadow: 8rpx 8rpx 32rpx rgba(251, 146, 158, .4);
}

.card .card-top {
    display: flex;
    justify-content: space-between;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #C4C4C4;
    box-sizing: border-box;
}

.card .card-top .card-top-left {
    padding: 4rpx 0;
    box-sizing: border-box;
}

.card .card-top .card-top-left .time {
    width: 338rpx;
    height: 48rpx;
    font-size: 32rpx;
    line-height: 48rpx;
}

.card .card-top .card-top-left .name {
    width: 288rpx;
    height: 116rpx;
    margin-top: 8rpx;
    font-weight: bold;
    font-size: 36rpx;
    line-height: 58rpx;
}

.card .card-top .card-top-right {
    width: 280rpx;
    height: 200rpx;
}

.card .card-top .card-top-right image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.card .card-bottom {
    width: 100%;
    height: 40rpx;
    margin-top: 32rpx;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 40rpx;
    box-sizing: border-box;
}